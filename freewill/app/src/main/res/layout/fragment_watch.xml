<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_border_gray"
            android:id="@+id/list_group"
            android:layout_width="85dp"
            android:layout_height="match_parent">
            <ListView
                android:padding="5dp"
                android:id="@+id/list_kind"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </LinearLayout>
        <LinearLayout
            android:layout_toLeftOf="@id/list_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/chart_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <spirit.freewill.view.ClockPerView
                    android:id="@+id/clockper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <spirit.freewill.view.YYView
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </RelativeLayout>
            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:background="#ffffff"-->
                <!--android:layout_height="1dp"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ListView
                    android:background="@drawable/bg_border_gray"
                    android:padding="5dp"
                    android:id="@+id/list"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"></ListView>
                <View
                    android:visibility="gone"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:background="@drawable/bg_border_gray"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_margin="20dp"
                        android:id="@+id/start_end"
                        android:onClick="click"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:textSize="21dp"
                        android:text="开始"
                        android:background="@drawable/bg_border_gray"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                    <TextView
                        android:layout_margin="20dp"
                        android:background="@drawable/bg_border_gray"
                        android:id="@+id/silent"
                        android:onClick="click"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:textSize="21dp"
                        android:text="静"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                    <TextView
                        android:layout_margin="20dp"
                        android:background="@drawable/bg_border_gray"
                        android:id="@+id/action"
                        android:onClick="click"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:textSize="21dp"
                        android:text="动"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>